<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POI_design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00C853</item>
        <item name="colorPrimaryVariant">#00C853</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00C853</item>
        <item name="colorSecondaryVariant">#85BDB8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Texto_titulo">
        <item name='android:textSize'>20dp</item>
        <item name='android:textColor'>#BCBBBB</item>
        <item name='android:textStyle'>bold</item>
    </style>

    <style name="Subtitulo">
        <item name='android:textSize'>17dp</item>
        <item name='android:textColor'>#BCBBBB</item>
        <item name='android:textStyle'>bold</item>
    </style>

    <style name="Texto_normal">
        <item name='android:textSize'>13dp</item>
        <item name='android:textColor'>#BCBBBB</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">#0091EA</item>
        <item name="colorControlNormal">#BCBBBB</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
    </style>

</resources>